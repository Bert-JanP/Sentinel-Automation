                                        "method":  "POST",
                                        "headers":  {
                                            "Authorization":  ""
                                        },
                                        "body":  {
                                            "Query":  "@{variables('Query')}",
                                            "Timespan":  "@{addDays(utcNow(), -180)}"
                                        },
                                        "authentication":  {
                                            "type":  "ManagedServiceIdentity",
                                            "audience":  "https://graph.microsoft.com"
                                        }
                                    },
                                    "runtimeConfiguration":  {
                                        "contentTransfer":  {
                                            "transferMode":  "Chunked"
                                        }
